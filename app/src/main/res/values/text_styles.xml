<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary Text Styles -->
    <style name="SmartPesa.Display4" parent="TextAppearance.AppCompat.Display4">
    </style>

    <style name="SmartPesa.Display3" parent="TextAppearance.AppCompat.Display3">
    </style>

    <style name="SmartPesa.Display2" parent="TextAppearance.AppCompat.Display2">
    </style>

    <style name="SmartPesa.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/text_color_primary_inverse</item>
    </style>

    <style name="SmartPesa.Headline" parent="TextAppearance.AppCompat.Headline">
    </style>

    <style name="SmartPesa.Title" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="SmartPesa.Subhead" parent="TextAppearance.AppCompat.Subhead">
    </style>

    <style name="SmartPesa.Caption" parent="TextAppearance.AppCompat.Caption">
    </style>

    <style name="SmartPesa.Body1" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="SmartPesa.Body2" parent="TextAppearance.AppCompat.Body2">
    </style>

    <style name="SmartPesa.Menu" parent="TextAppearance.AppCompat.Menu">
    </style>

    <style name="SmartPesa.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="SmartPesa.Button.Small" parent="SmartPesa.Button">
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <!-- Inverses -->
    <style name="SmartPesa.Display4.Inverse" parent="SmartPesa.Display4">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="SmartPesa.Display3.Inverse" parent="SmartPesa.Display3">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="SmartPesa.Display2.Inverse" parent="SmartPesa.Display2">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
