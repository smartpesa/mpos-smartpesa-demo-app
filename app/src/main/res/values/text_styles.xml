    <style name="SmartPesa.Display4.Accented" parent="SmartPesa.Display4">
        <item name="android:textColor">?android:textColorHighlightInverse</item>
    </style>

    <style name="SmartPesa.Display3.Accented" parent="SmartPesa.Display3">
        <item name="android:textColor">?android:textColorHighlightInverse</item>
