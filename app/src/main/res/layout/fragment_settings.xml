<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<fr.castorflex.android.smoothprogressbar.SmoothProgressBar
    android:id="@+id/settingsPB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    android:visibility="gone"
    app:spb_color="@color/progress_color"
    app:spb_mirror_mode="false"
    app:spb_progressiveStart_activated="true"
    app:spb_progressiveStart_speed="2"
    app:spb_progressiveStop_speed="3.4"
    app:spb_reversed="false"
    app:spb_sections_count="4"
    app:spb_speed="1.0"
    app:spb_stroke_separator_length="2dp"
    app:spb_stroke_width="4dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/settingsPB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="8dp"
        android:text="@string/devices_list"/>

    <ListView
        android:id="@+id/settingsLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent" />


</LinearLayout>

</RelativeLayout>